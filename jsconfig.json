{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "~/*": ["resources/*"]
        },
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "preserve"
    },
    "include": [
        "resources/js/**/*",
        "resources/views/**/*"
    ],
    "exclude": [
        "node_modules",
        "vendor"
    ]
}